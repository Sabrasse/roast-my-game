<% content_for :auth_title do %>
  Sign up
<% end %>

<% content_for :auth_subtitle do %>
  Create your account to start sharing your games
<% end %>

<% content_for :auth_content do %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
    <%= f.error_notification %>

    <div class="form-group mb-4">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { 
                    class: "form-control",
                    autocomplete: "email" 
                  } %>
    </div>

    <div class="form-group mb-4">
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { 
                    class: "form-control",
                    autocomplete: "new-password" 
                  } %>
    </div>

    <div class="form-group mb-4">
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { 
                    class: "form-control",
                    autocomplete: "new-password" 
                  } %>
    </div>

    <div class="d-grid gap-2">
      <%= f.button :submit, 
                  "Sign up", 
                  class: "custom-btn btn-danger",
                  data: { 
                    disable_with: '<i class="fas fa-spinner fa-spin"></i> Creating account...'
                  } %>
    </div>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/auth_form" %>
