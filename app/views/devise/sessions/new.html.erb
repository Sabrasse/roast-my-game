<% content_for :auth_title do %>
  Log in
<% end %>

<% content_for :auth_subtitle do %>
  Sign in to your account to continue
<% end %>

<% content_for :auth_content do %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
    <div class="form-group mb-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { 
                    class: "form-control",
                    autocomplete: "email" 
                  } %>
    </div>

    <div class="form-group mb-4">
      <%= f.input :password,
                  required: false,
                  input_html: { 
                    class: "form-control",
                    autocomplete: "current-password" 
                  } %>
    </div>

    <div class="form-group mb-4">
      <%= f.input :remember_me, 
                  as: :boolean, 
                  input_html: { class: "form-check-input" },
                  label_html: { class: "form-check-label" } if devise_mapping.rememberable? %>
    </div>

    <div class="d-grid gap-2">
      <%= f.button :submit, 
                  "Log in", 
                  class: "custom-btn btn-danger",
                  data: { 
                    disable_with: '<i class="fas fa-spinner fa-spin"></i> Signing in...'
                  } %>
    </div>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/auth_form" %>
