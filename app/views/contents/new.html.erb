<div class="container">
  <div class="upload-section my-8">
    <div class="d-flex align-items-center mb-4">
      <%= link_to root_path, class: "text-decoration-none me-3" do %>
        <i class="fas fa-arrow-left text-warning"></i>
      <% end %>
      <div>
        <h1 class="h3 mb-1">Upload Your Game</h1>
        <p class="mb-0">Share your project and get valuable feedback from our community</p>
      </div>
    </div>

    <div class="card-base">
      <div class="content-form">
        <%= simple_form_for @content, html: { class: "needs-validation" } do |f| %>
          <div class="form-group mb-4">
            <%= f.input :media, 
              label: "Upload Media", 
              as: :file, 
              required: true,
              hint: "Max 50MB for videos, 5MB for images",
              input_html: { 
                class: "form-control",
                data: { 
                  controller: "file-upload",
                  action: "change->file-upload#validate"
                }
              } %>
            <div class="invalid-feedback" data-file-upload-target="error"></div>
          </div>

          <div class="form-group mb-4">
            <%= f.input :description, 
              label: "Description", 
              as: :text, 
              placeholder: "Describe your game, its features, and what kind of feedback you're looking for...",
              input_html: { 
                class: "form-control",
                rows: 5
              } %>
          </div>

          <div class="d-grid gap-2">
            <%= f.button :submit, 
              "Publish my game", 
              class: "custom-btn btn-danger",
              data: { 
                disable_with: '<i class="fas fa-spinner fa-spin"></i> Publishing...'
              } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
