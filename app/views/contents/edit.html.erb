<div class="container">
  <div class="upload-game my-5">
    <div class="content-form">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <%= link_to "← Back to Game", content_path(@content), class: "text-decoration-none text-warning" %>
        <h1 class="h3 mb-0">Edit Your Game</h1>
      </div>

      <%= simple_form_for @content, html: { class: "needs-validation" } do |f| %>
        <div class="form-group mb-4">
          <%= f.input :media, 
            label: "Upload Media", 
            as: :file, 
            required: true,
            hint: "Max 50MB for videos, 5MB for images",
            input_html: { 
              class: "form-control",
              data: { 
                controller: "file-upload",
                action: "change->file-upload#validate"
              }
            } %>
          <div class="invalid-feedback" data-file-upload-target="error"></div>
        </div>

        <div class="form-group mb-4">
          <%= f.input :description, 
            label: "Description", 
            as: :text, 
            placeholder: "Describe your game, its features, and what kind of feedback you're looking for...",
            input_html: { 
              class: "form-control",
              rows: 5
            } %>
        </div>

        <div class="d-grid gap-2">
          <%= f.button :submit, 
            "Update my game", 
            class: "custom-btn btn-warning",
            data: { 
              disable_with: '<i class="fas fa-spinner fa-spin"></i> Updating...'
            } %>
        </div>
      <% end %>
    </div>
  </div>
</div> 