<%# SEO Optimization %>
<% provide(:title, "Browse Games") %>
<% provide(:meta_description, "Browse and discover games to roast. Share your thoughts and engage with the gaming community.") %>

<div class="container">
  <div class="browse-section my-8">
    <div class="d-flex align-items-center mb-4">
      <%= link_to root_path, class: "text-decoration-none me-3" do %>
        <i class="fas fa-arrow-left text-warning"></i>
      <% end %>
      <div>
        <h1 class="h3 mb-1">Browse Games</h1>
        <p class="mb-0">Discover games and share your thoughts</p>
      </div>
      <% if user_signed_in? %>
        <%= link_to new_content_path, class: "custom-btn btn-warning ms-auto" do %>
          <i class="fas fa-plus me-2"></i>Upload Game
        <% end %>
      <% end %>
    </div>

    <%# Content grid %>
    <div class="content-grid">
      <% if @contents.any? %>
        <% @contents.each do |content| %>
          <%= render partial: "content_card", locals: { content: content } %>
        <% end %>
      <% else %>
        <div class="text-center py-5">
          <h3 class="h4 mb-3">No games yet</h3>
          <p class="mb-4">Be the first to upload a game!</p>
          <%= link_to "Upload your Game", new_content_path, class: "custom-btn btn-danger" %>
        </div>
      <% end %>
    </div>

    <%# Pagination %>
    <% if @contents.any? %>
      <div class="d-flex justify-content-center mt-6">
        <%= paginate @contents %>
      </div>
    <% end %>
  </div>
</div> 