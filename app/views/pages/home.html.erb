<h1>Welcome to Roast My Game !</h1>
<p>The best place to gather honest feedback about your game.</p>
<%= custom_button("Start", new_content_path, color: "success") %>

<h1>Last roasted games</h1>

<% Content.all.each do |content| %>
  <% if content.media.attached? %>
    <% if content.media.blob.content_type.start_with?("image") %>
      <%= image_tag content.media, size: "200x200", class: "rounded" %>
    <% elsif content.media.blob.content_type.start_with?("video") %>
      <video width="320" height="240" controls>
        <source src="<%= url_for(content.media) %>" type="<%= content.media.blob.content_type %>">
        Your browser does not support the video tag.
      </video>
    <% else %>
      <p>Unsupported media type.</p>
    <% end %>
  <% end %>
  <p><%= content.description %></p>
<% end %>
