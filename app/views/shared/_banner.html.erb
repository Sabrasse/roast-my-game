<%# Banner Component with Code Animation %>
<% title ||= "Default Title" %>
<% tagline ||= "Default tagline goes here." %>
<% button_text ||= nil %>
<% button_path ||= nil %>
<% button_color ||= "primary" %>

<header class="banner-container" data-controller="banner">
  <div class="container">
    <div class="banner-grid">
      <div class="banner-content">
        <h1 class="banner-title typewriter"><%= title %></h1>

        <h2 class="banner-tagline">
          <%= simple_format(tagline, {}, wrapper_tag: "span") %>
        </h2>

        <div class="banner-stats">
          <div class="stat fade-in">
            <span class="stat-value" data-banner-target="counter" data-target="<%= @total_feedbacks %>">0</span>
            <span class="stat-label">honest feedbacks</span>
          </div>
          <div class="stat fade-in" style="animation-delay: 0.2s">
            <span class="stat-value" data-banner-target="counter" data-target="<%= @total_games %>">0</span>
            <span class="stat-label">games improved</span>
          </div>
          <div class="stat fade-in" style="animation-delay: 0.4s">
            <span class="stat-value" data-banner-target="counter" data-target="<%= @user_satisfaction %>">0</span>
            <span class="stat-label">user satisfaction</span>
          </div>
        </div>

        <div class="banner-cta fade-in" style="animation-delay: 0.6s">
          <%= custom_button(button_text, button_path, color: button_color, extra_classes: "") %>
        </div>
      </div>

      <div class="banner-visual">
        <div class="code-window">
          <div class="code-header">
            <div class="code-buttons">
              <span class="code-button red"></span>
              <span class="code-button yellow"></span>
              <span class="code-button green"></span>
            </div>
            <div class="code-title">game_feedback.js</div>
          </div>
          <pre class="code-content" data-banner-target="codeContent"></pre>
        </div>
      </div>
    </div>
  </div>
</header>
