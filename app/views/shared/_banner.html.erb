<% title ||= "Default Title" %>
<% tagline ||= "Default tagline goes here." %>
<% button_text ||= nil %>  <%# Button is optional, so default to nil %>
<% button_path ||= nil %>
<% button_color ||= "primary" %>

<header class="banner">
  <div class="banner-left">
    <h1 class="banner-title"><%= title %></h1>

    <h2 class="banner-tagline">
      <%= simple_format(tagline, {}, wrapper_tag: "span") %>
    </h2>

    <!-- Stats row -->
    <div class="banner-stats">
      <div class="stat">
        <span class="stat-value">450+</span>
        <span class="stat-label">honest feedbacks</span>
      </div>
      <div class="stat">
        <span class="stat-value">200+</span>
        <span class="stat-label">games improved</span>
      </div>
    </div>

    <!-- CTA Button -->
    <%= custom_button(button_text, button_path, color: button_color) %>
  </div>

  <div class="banner-right">
    <%# <!-- Replace this placeholder with your actual image or illustration -->
    <div class="placeholder-image">
      <!-- e.g., <%= image_tag "hero_image.png" %>
    <%# </div> %>
  </div>
</header>
