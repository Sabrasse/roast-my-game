<%# Footer Component %>
<footer class="footer mt-8">
  <div class="container">
    <div class="footer-content">
      <div class="footer-grid">
        <%# Brand Section %>
        <div class="footer-brand">
          <h3 class="footer-title">Game Roaster</h3>
          <p class="footer-description">Get expert feedback to level up your game development journey.</p>
          <div class="footer-social">
            <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
            <a href="#" class="social-link"><i class="fab fa-github"></i></a>
            <a href="#" class="social-link"><i class="fab fa-discord"></i></a>
          </div>
        </div>

        <%# Quick Links %>
        <div class="footer-links">
          <h4 class="footer-heading">Quick Links</h4>
          <ul class="footer-list">
            <li><%= link_to "Home", root_path, class: "footer-link" %></li>
            <li><%= link_to "Upload Game", new_content_path, class: "footer-link" %></li>
            <li><%= link_to "Browse Games", contents_path, class: "footer-link" %></li>
            <li><%= link_to "About", about_path, class: "footer-link" %></li>
          </ul>
        </div>

        <%# Resources %>
        <div class="footer-links">
          <h4 class="footer-heading">Resources</h4>
          <ul class="footer-list">
            <li><%= link_to "Getting Started", "#", class: "footer-link" %></li>
            <li><%= link_to "Community Guidelines", "#", class: "footer-link" %></li>
            <li><%= link_to "FAQ", "#", class: "footer-link" %></li>
            <li><%= link_to "Contact", "#", class: "footer-link" %></li>
          </ul>
        </div>

        <%# Newsletter %>
        <div class="footer-newsletter">
          <h4 class="footer-heading">Stay Updated</h4>
          <p class="footer-description">Get weekly insights on game development and exclusive feedback opportunities.</p>
          <%= render "shared/newsletter_form" %>
        </div>
      </div>

      <%# Bottom Bar %>
      <div class="footer-bottom">
        <div class="footer-copyright">
          Â© <%= Time.current.year %> Game Roaster. All rights reserved.
        </div>
        <div class="footer-legal">
          <%= link_to "Privacy Policy", "#", class: "footer-link" %>
          <%= link_to "Terms of Service", "#", class: "footer-link" %>
          <%= link_to "Cookie Policy", "#", class: "footer-link" %>
        </div>
      </div>
    </div>
  </div>
</footer> 